                    success: function (data) {
                        $("#uploadInput").val("");
                        $("#uploadGif").remove();
                        if (data.Duplicate == false) {
                            $("ul.uploadedImage").append("<li><img src='/Images/" + data.Src + "' data-name='" + data.Name + data.ext + "'/>" + data.Name + "</li>");

